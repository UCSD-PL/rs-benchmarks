{
"update_url":"http://clients2.google.com/service/update2/crx",
  "name": "Lazarus: Form Recovery",
  "version": "3.0.5",
  "description": "Autosaves everything you type so you can easily recover from form-killing timeouts, crashes and network errors.",
	
  "background_page": "background.html",
	"options_page": "options.html",
  "permissions": [
    "http://*/*",
    "https://*/*",
    "tabs"
  ],
	"icons": {
    "16": "Icon-16.png",
    "32": "Icon-32.png",
    "48": "Icon-48.png",
    "128": "Icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"], 
      "js": [
        "js/lazarus.js",
        "js/logger.js",
        "js/menu.js",
        "js/locale.js",
        "js/strings.js",
        "js/utils.js",
        "js/mouse.js",
        "js/dialog.js",
        "js/content.js",
        "js/platform.js",
        "js/content-init.js"
      ],
      "all_frames" : true,
      "run_at": "document_start"
    }
  ],
  "page_action": {
    "default_icon": "images/lazarus.png",
    "default_title": "Lazarus: Form Recovery"
  }
}