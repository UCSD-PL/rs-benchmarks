{
	"manifest_version": 2,
	"default_locale": "en",
	"update_url": "https://clients2.google.com/service/update2/crx",

	"version": "0.9.8.13",
	"name": "Imagus",
	"description": "__MSG_APP_DESCRIPTION__",
	"homepage_url": "https://googledrive.com/host/0Bx8fnUCX4W2IUTNPT0s2eUFDQms/",
	"author": "Deathamns",
	"developer": {
		"name": "Deathamns",
		"email": "deathamns@gmail.com"
	},

	"icons": {
		"128": "icon.png"
	},

	"permissions": [
		"*://*/*",
		"tabs",
		"history"
	],

	"background": {
		"page": "background.html",
		"persistent": true
	},
	"options_page": "options.html",
	"content_scripts": [
		{
			"matches": [
				"<all_urls>"
			],
			"js": [
				"includes/app.js",
				"includes/content.js"
			],
			"run_at": "document_idle",
			"all_frames": true
		}
	]
}